# ServerChat Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================
NODE_ENV=production
DEPLOYMENT_ENV=production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=secure_password_change_this_123
MONGODB_URI=mongodb://mongodb:27017/serverchat-main

# Redis
REDIS_PASSWORD=redis_password_change_this_123

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret (CHANGE THIS!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Admin Keys (CHANGE THESE!)
ADMIN_KEY_1=general-admin-key-change-this
ADMIN_KEY_2=gaming-admin-key-change-this
ADMIN_KEY_3=study-admin-key-change-this

# Bcrypt rounds
BCRYPT_ROUNDS=12

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server IPs (adjust for your network)
SERVER_IP_1=192.168.1.100
SERVER_IP_2=192.168.1.101
SERVER_IP_3=192.168.1.102

# Chat Server Passwords (optional)
GAMING_SERVER_PASSWORD=gaming123
STUDY_SERVER_PASSWORD=study2023

# CORS Origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# ADMIN INTERFACES
# =============================================================================

# Mongo Express
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASS=admin123_change_this

# Redis Commander
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASS=admin123_change_this

# Grafana
GRAFANA_PASSWORD=grafana123_change_this

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# S3 Backup (optional)
S3_BACKUP_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
ENABLE_MONITORING=true
STATS_INTERVAL=300

# =============================================================================
# SSL/TLS CONFIGURATION (for production)
# =============================================================================
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem
# SSL_DHPARAM_PATH=/etc/nginx/ssl/dhparam.pem

# =============================================================================
# EXTERNAL SERVICES (optional)
# =============================================================================

# Discord Webhook for notifications
# DISCORD_WEBHOOK_URL=

# Slack Webhook for notifications
# SLACK_WEBHOOK_URL=

# Email configuration (for notifications)
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=
# SMTP_FROM=

# =============================================================================
# DEVELOPMENT/TESTING
# =============================================================================

# Debug mode
DEBUG=false
LOG_LEVEL=info

# Test database
TEST_MONGODB_URI=mongodb://mongodb:27017/serverchat-test

# =============================================================================
# DOCKER COMPOSE PROFILES
# =============================================================================
# Uncomment to enable specific profiles by default
# COMPOSE_PROFILES=admin,monitoring,backup