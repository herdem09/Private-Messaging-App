# Environment
NODE_ENV=development

# Server Configuration
PORT=8080
SERVER_NAME=My Awesome Chat Server
SERVER_DESCRIPTION=A friendly chat server for everyone
SERVER_IP=192.168.1.100

# Server Authentication
SERVER_PASSWORD=your-server-password-here
REQUIRE_PASSWORD_FOR_GUESTS=false

# User Limits
MAX_USERS=100
MAX_STORED_MESSAGES=1000

# Main Server Connection
MAIN_SERVER_URL=http://localhost:3000
SERVER_ID=
SERVER_TOKEN=

# Owner Information
OWNER_EMAIL=admin@example.com
OWNER_DISCORD=admin#1234

# Security
JWT_SECRET=your-super-secret-jwt-key-here
ADMIN_KEY=your-admin-panel-key-here

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Spam Protection
SPAM_MESSAGES_PER_MINUTE=10
SPAM_WARNING_THRESHOLD=8
SPAM_BAN_DURATION=60

# Content Filtering
BANNED_WORDS=spam,bad,word,list

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Logging
DEBUG=false
LOG_LEVEL=info

# Cleanup
CLEANUP_INTERVAL_MINUTES=10
OLD_LOGS_CLEANUP_DAYS=30

# Features
ENABLE_ADMIN_PANEL=true
ENABLE_MESSAGE_HISTORY=true
ENABLE_USER_REGISTRATION=false

# External Services (optional)
# DISCORD_WEBHOOK_URL=
# SLACK_WEBHOOK_URL=

# Monitoring (optional)
# SENTRY_DSN=
# NEW_RELIC_LICENSE_KEY=